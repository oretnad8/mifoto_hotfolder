{
  "name": "localfoto-hotfolder",
  "version": "0.1.0",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "lint": "next lint",
    "start": "cross-env NODE_ENV=production node server.js",
    "app:windows": "concurrently \"npm run dev\" \"wait-on tcp:443 && electron .\"",
    "build:win": "npx prisma generate && next build && electron-builder --win"
  },
  "build": {
    "appId": "com.localfoto.hotfolder",
    "productName": "LocalFotoHotfolder",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@prisma/engines/**/*",
      "**/node_modules/@prisma/engines/**/*",
      "**/node_modules/@prisma/client/**/*"
    ],
    "files": [
      ".next/**/*",
      "public/**/*",
      "server.js",
      "electron-main.js",
      "preload.js",
      "package.json",
      "lib/**/*",
      "resources/**/*",
      "prisma/schema.prisma",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "certs",
        "to": "certs"
      },
      {
        "from": "resources/bin-bluetooth",
        "to": "bin-bluetooth"
      },
      {
        "from": "prisma/kiosk.db",
        "to": "prisma/kiosk.db"
      },
      {
        "from": "lib/prisma-client/query_engine-windows.dll.node",
        "to": "prisma/query_engine-windows.dll.node"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LocalFoto Kiosk"
    }
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@react-google-maps/api": "^2.19.3",
    "@types/fs-extra": "^11.0.4",
    "@types/qrcode.react": "^1.0.5",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "fabric": "^5.5.2",
    "fs-extra": "^11.3.3",
    "heic2any": "^0.0.4",
    "mercadopago": "^2.11.0",
    "next": "^15.5.9",
    "node-machine-id": "^1.1.12",
    "prisma": "5.22.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-easy-crop": "^5.5.6",
    "recharts": "^3.0.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/fabric": "^5.3.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sharp": "^0.31.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}